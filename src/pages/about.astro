---
import Layout from "../layouts/Layout.astro";
import { AboutUsHero } from "../components/heroes/AboutUsHero";
import Team from "../components/Team.astro";
import Achievements from "../components/Achievements.astro";
import FeaturedProjects from "../components/FeaturedProjects.astro";
---

<Layout title="About Us - Bliz Media">
  <AboutUsHero client:load />
  <Achievements />
  <Team />
  <div
    class="opacity-0 translate-y-8 transition-all duration-700
ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
    data-animate-on-scroll
  >
    <FeaturedProjects />
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              setTimeout(() => {
                entry.target.classList.add("animate-in");
              }, index * 100);
            }
          });
        },
        { threshold: 0.1 },
      );
      document
        .querySelectorAll("[data-animate-on-scroll]")
        .forEach((el) => observer.observe(el));
    });
  </script>
</Layout>
