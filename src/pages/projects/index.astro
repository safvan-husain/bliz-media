---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import Testimonials from "@/components/Testimonials.astro";
import { services as servicesData } from "../../data/services";

const services: { slug: string; name: string }[] = [
    { slug: "all", name: "All" },
    ...servicesData.map((s) => ({ slug: s.slug, name: s.title })),
];

const serviceSlugByTitle = new Map(
    servicesData.map((service) => [service.title, service.slug]),
);
---

<Layout title="Projects | Our Work">
    <section class="py-20 pt-32 md:py-32">
        <div class="container mx-auto px-4">
            <div class="mb-12">
                <h1
                    class="text-4xl sm:text-6xl lg:text-7xl text-black font-bold tracking-tighter"
                >
                    Our Projects
                </h1>
                <p class="mt-6 text-xl font-medium text-zinc-600">
                    Each project we undertake is a testament to our commitment
                    to quality, creativity, and strategic thinking.
                </p>
            </div>

            <div class="mb-10 flex flex-wrap gap-3">
                {
                    services.map((service) => (
                        <button
                            type="button"
                            data-service-filter={service.slug}
                            class="inline-flex items-center rounded-full border border-[var(--color-muted-foreground)] bg-transparent px-4 py-2 text-sm font-medium text-[var(--color-foreground)] transition-colors"
                        >
                            {service.name}
                        </button>
                    ))
                }
            </div>

            <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
                {
                    projects.map((project) => (
                        <article
                            data-service-slug={
                                serviceSlugByTitle.get(project.service) ??
                                project.service
                                    .toLowerCase()
                                    .replace(/\s+/g, "-")
                            }
                            data-service-name={project.service}
                            class="group overflow-hidden rounded-3xl border border-[var(--color-border)] bg-[var(--color-card)]"
                        >
                            <div class="h-72 overflow-hidden">
                                <img
                                    src={project.image}
                                    alt={project.name}
                                    class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
                                />
                            </div>
                            <div class="p-6">
                                <div class="mb-1 flex">
                                    <span class="text-sm font-medium text-[var(--color-muted-foreground)]">
                                        {project.service}
                                    </span>
                                </div>
                                <h3 class="text-xl font-semibold text-[var(--color-foreground)] md:text-2xl">
                                    {project.name}
                                </h3>
                                <div class="mt-4 flex flex-wrap gap-2">
                                    <a
                                        href={`/project/${project.slug}`}
                                        class="inline-flex items-center justify-center rounded-full border border-[var(--color-border)] bg-black px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-[var(--color-primary)]"
                                    >
                                        View Details
                                    </a>
                                    {project.externalUrl &&
                                    /^https?:\/\//i.test(
                                        project.externalUrl,
                                    ) ? (
                                        <a
                                            href={project.externalUrl}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-flex items-center justify-center rounded-full border border-[var(--color-border)] bg-primary px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-black"
                                        >
                                            View Website
                                        </a>
                                    ) : null}
                                </div>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>

    <script>
        const buttons = Array.from(
            document.querySelectorAll("[data-service-filter]"),
        );
        const cards = Array.from(
            document.querySelectorAll("[data-service-name]"),
        );

        const activeClasses = [
            "bg-[var(--color-primary)]",
            "text-white",
            "border-[var(--color-primary)]",
        ];

        const inactiveClasses = [
            "bg-transparent",
            "text-[var(--color-foreground)]",
            "border-[var(--color-muted-foreground)]",
        ];

        function setActiveButton(activeButton: any) {
            buttons.forEach((button) => {
                button.classList.remove(...activeClasses);
                button.classList.add(...inactiveClasses);
            });

            if (activeButton) {
                activeButton.classList.remove(...inactiveClasses);
                activeButton.classList.add(...activeClasses);
            }
        }

        function filterProjects(service: any) {
            const selectedService = String(service || "").toLowerCase();

            cards.forEach((card) => {
                const cardServiceSlug = (
                    card.getAttribute("data-service-slug") || ""
                ).toLowerCase();
                const shouldShow =
                    selectedService === "all" ||
                    !selectedService ||
                    cardServiceSlug === selectedService;

                if (shouldShow) {
                    card.classList.remove("hidden");
                } else {
                    card.classList.add("hidden");
                }
            });
        }

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                const service = button.getAttribute("data-service-filter");
                setActiveButton(button);
                filterProjects(service);
            });
        });

        const urlParams = new URLSearchParams(window.location.search);
        const filterParam = urlParams.get("filter");

        if (buttons.length) {
            let targetButton = null;

            if (filterParam) {
                targetButton = buttons.find(
                    (btn) =>
                        btn
                            .getAttribute("data-service-filter")
                            ?.toLowerCase() === filterParam.toLowerCase(),
                );
            }

            if (!targetButton) {
                targetButton =
                    buttons.find(
                        (btn) =>
                            btn.getAttribute("data-service-filter") === "all",
                    ) || buttons[0];
            }

            const service = targetButton.getAttribute("data-service-filter");
            setActiveButton(targetButton);
            filterProjects(service);
        }
    </script>
</Layout>
