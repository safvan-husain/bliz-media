---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import Testimonials from "@/components/Testimonials.astro";

const services = ["All", ...new Set(projects.map((project) => project.service))];
---


<Layout title="Projects | Our Work">
  <section class="py-20 pt-32 md:py-32">
    <div class="container mx-auto px-4">
      <h1 class="mb-12 text-3xl font-bold md:text-5xl text-[var(--color-foreground)]">
        Our Projects
      </h1>

      <div class="mb-10 flex flex-wrap gap-3">
        {
          services.map((service) => (
            <button
              type="button"
              data-service-filter={service}
              class="inline-flex items-center rounded-full border border-[var(--color-muted-foreground)] bg-transparent px-4 py-2 text-sm font-medium text-[var(--color-foreground)] transition-colors"
            >
              {service}
            </button>
          ))
        }
      </div>

      <div class="grid grid-cols-1 gap-4 md:grid-cols-4 md:auto-rows-[250px]">
        {
          projects.map((project) => (
            <a
              href={`/project/${project.slug}`}
              data-service-name={project.service}
              class={`group relative block overflow-hidden rounded-3xl ${project.class}`}
            >
              <img
                src={project.image}
                alt={project.name}
                class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 transition-opacity duration-300 group-hover:opacity-80" />
              <div class="absolute bottom-0 left-0 w-full p-6 translate-y-2 transition-transform duration-300 group-hover:translate-y-0">
                <div class="flex mb-1">
                  <span class="text-sm font-medium text-white/80">
                    {project.service}
                  </span>
                  <span class="text-white/80 mx-2">&#183;</span>
                  <span class="text-sm font-medium text-white/80">
                    {project.year}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-white md:text-2xl">
                  {project.name}
                </h3>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <script>
    const buttons = Array.from(
      document.querySelectorAll("[data-service-filter]")
    );
    const cards = Array.from(
      document.querySelectorAll("[data-service-name]")
    );

    const activeClasses = [
      "bg-[var(--color-primary)]",
      "text-white",
      "border-[var(--color-primary)]",
    ];

    const inactiveClasses = [
      "bg-transparent",
      "text-[var(--color-foreground)]",
      "border-[var(--color-muted-foreground)]",
    ];

    function setActiveButton(activeButton: any) {
      buttons.forEach((button) => {
        button.classList.remove(...activeClasses);
        button.classList.add(...inactiveClasses);
      });

      if (activeButton) {
        activeButton.classList.remove(...inactiveClasses);
        activeButton.classList.add(...activeClasses);
      }
    }

    function filterProjects(service: any) {
      cards.forEach((card) => {
        const cardService = card.getAttribute("data-service-name");
        const shouldShow = service === "All" || cardService === service;

        if (shouldShow) {
          card.classList.remove("hidden");
        } else {
          card.classList.add("hidden");
        }
      });
    }

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        const service = button.getAttribute("data-service-filter");
        setActiveButton(button);
        filterProjects(service);
      });
    });

    if (buttons.length) {
      const allButton =
        buttons.find((btn) => btn.getAttribute("data-service-filter") === "All") ||
        buttons[0];
      setActiveButton(allButton);
      filterProjects("All");
    }
  </script>
</Layout>
