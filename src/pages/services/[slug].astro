---
import Layout from "../../layouts/Layout.astro";
import PricingCards from "../../components/PricingCards.astro";
import FloatingIcons from "../../components/FloatingIcons";
import { services } from "../../data/services";

// Hero components mapping
import { DigitalMarketingHero } from "../../components/heroes/DigitalMarketingHero";
import { WebDevelopmentHero } from "../../components/heroes/WebDevelopmentHero";
import { ProductionHero } from "../../components/heroes/ProductionHero";
import { BrandingHero } from "../../components/heroes/BrandingHero";
import { SparklesText } from "../../components/ui/sparkles-text";

export async function getStaticPaths() {
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;
---

<Layout title={`${service.title} | Bliz Media`}>
    {
        service.slug === "digital-marketing" ? (
            <DigitalMarketingHero title={service.title} client:load />
        ) : service.slug === "development" ? (
            <WebDevelopmentHero title={service.title} client:load />
        ) : service.slug === "production" ? (
            <ProductionHero title={service.title} client:load />
        ) : service.slug === "branding" ? (
            <BrandingHero
                title={service.title}
                description={service.excerpt}
                images={service.heroImages}
                client:load
            />
        ) : (
            <>
                <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden bg-black">
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,61,61,0.15)_0%,transparent_70%)]" />

                    <div class="max-w-4xl mx-auto px-6 relative z-10 text-center space-y-12 pt-22">
                        <div class="space-y-4">
                            <SparklesText
                                text={service.title}
                                className="text-6xl md:text-9xl font-black tracking-tighter text-white leading-[0.85]"
                                client:load
                            />
                        </div>

                        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-4">
                            <a
                                href="/quote"
                                class="w-full sm:w-auto inline-flex items-center justify-center gap-4 bg-primary text-white px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:bg-white hover:text-black hover:scale-110 hover:shadow-[0_0_30px_rgba(255,61,61,0.4)] active:scale-95 group"
                            >
                                START YOUR PROJECT
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="transition-transform duration-500 group-hover:translate-x-1"
                                >
                                    <line x1="5" y1="12" x2="19" y2="12" />
                                    <polyline points="12 5 19 12 12 19" />
                                </svg>
                            </a>
                            <a
                                href="/projects"
                                class="w-full sm:w-auto inline-flex items-center justify-center gap-4 border-2 border-white/20 text-white px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:border-primary hover:text-primary active:scale-95 group"
                            >
                                SEE OUR WORK
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="transition-transform duration-500 group-hover:translate-x-1"
                                >
                                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                                </svg>
                            </a>
                            {service.plans && service.plans.length > 0 && (
                                <a
                                    href="#pricing"
                                    class="w-full sm:w-auto inline-flex items-center justify-center gap-4 border-2 border-white/5 text-white/40 px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:border-primary hover:text-primary active:scale-95"
                                >
                                    VIEW PRICING
                                </a>
                            )}
                        </div>
                    </div>
                </section>

                {/* Service Content Section */}
                <section class="pb-20 bg-black text-white">
                    <div class="max-w-4xl mx-auto px-6">
                        <div
                            class="prose prose-invert prose-2xl max-w-none prose-headings:text-white prose-p:text-zinc-400 prose-li:text-zinc-400 prose-p:leading-relaxed opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                            data-animate-on-scroll
                        >
                            <div set:html={service.content} />
                        </div>
                    </div>
                </section>
            </>
        )
    }

    {/* Pricing Cards Section - Only show if service has plans */}
    {
        service.plans && service.plans.length > 0 && (
            <div id="pricing">
                <PricingCards
                    plans={service.plans}
                    serviceName={service.title}
                />
            </div>
        )
    }

    {/* Other Services Navigation */}
    <section class="py-20 bg-zinc-50">
        <div class="max-w-[var(--max-width-container)] mx-auto px-6">
            <div
                class="flex items-center justify-between mb-12 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                data-animate-on-scroll
            >
                <h2 class="text-3xl font-black tracking-tighter text-[#0c1b33]">
                    Explore Other Services
                </h2>
                <a
                    href="/services"
                    class="text-sm font-black tracking-[0.2em] text-[#0c1b33]/40 hover:text-primary transition-colors"
                >
                    VIEW ALL
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    services
                        .filter((s) => s.slug !== service.slug)
                        .slice(0, 4)
                        .map((s, index) => (
                            <a
                                href={`/services/${s.slug}`}
                                class="group space-y-4 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                                data-animate-on-scroll
                                style={`transition-delay: ${index * 150}ms;`}
                            >
                                <div class="aspect-video rounded-3xl overflow-hidden relative">
                                    <img
                                        src={s.image}
                                        alt={s.title}
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                    />
                                    <div class="absolute inset-0 bg-[#0c1b33]/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="white"
                                            stroke-width="3"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <path d="M7 17L17 7M17 7H7M17 7V17" />
                                        </svg>
                                    </div>
                                </div>
                                <h4 class="font-black text-lg tracking-tight text-[#0c1b33]/80 group-hover:text-primary transition-colors">
                                    {s.title}
                                </h4>
                            </a>
                        ))
                }
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry, index) => {
                        if (entry.isIntersecting) {
                            setTimeout(() => {
                                entry.target.classList.add("animate-in");
                            }, index * 100);
                        }
                    });
                },
                { threshold: 0.1 },
            );

            document
                .querySelectorAll("[data-animate-on-scroll]")
                .forEach((el) => observer.observe(el));
        });
    </script>
</Layout>
