---
import Layout from "../../layouts/Layout.astro";
import PricingCards from "../../components/PricingCards.astro";
import FloatingIcons from "../../components/FloatingIcons";
import { services } from "../../data/services";
import { projects } from "../../data/projects";

// Hero components mapping
import { DigitalMarketingHero } from "../../components/heroes/DigitalMarketingHero";
import { WebDevelopmentHero } from "../../components/heroes/WebDevelopmentHero";
import { ProductionHero } from "../../components/heroes/ProductionHero";
import { BrandingHero } from "../../components/heroes/BrandingHero";
import { SparklesText } from "../../components/ui/sparkles-text";
import { WebDevelopmentContent } from "../../components/services/WebDevelopmentContent";
import { DigitalMarketingContent } from "../../components/services/DigitalMarketingContent";
import { BrandingContent } from "../../components/services/BrandingContent";
import { ProductionContent } from "../../components/services/ProductionContent";
import { DesignContent } from "../../components/services/DesignContent";

export async function getStaticPaths() {
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;

// Filter projects related to this service
const relatedProjects = projects.filter(
    (project) => project.service === service.title,
);
---

<Layout title={`${service.title} | Bliz Media`}>
    {
        service.slug === "digital-marketing" ? (
            <DigitalMarketingHero
                title={service.title}
                description={service.excerpt}
                client:load
            />
        ) : service.slug === "web-development" ? (
            <WebDevelopmentHero
                title={service.title}
                description={service.excerpt}
                client:load
            />
        ) : service.slug === "production" ? (
            <ProductionHero
                title={service.title}
                description={service.excerpt}
                client:load
            />
        ) : service.slug === "branding" ? (
            <BrandingHero
                title={service.title}
                description={service.excerpt}
                images={service.heroImages}
                client:load
            />
        ) : (
            <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden bg-white">
                <div class="max-w-4xl mx-auto px-6 relative z-10 text-center space-y-8 pt-22">
                    <div class="space-y-6">
                        <SparklesText
                            text={service.title}
                            className="text-4xl sm:text-6xl lg:text-7xl text-black font-bold tracking-tighter"
                            client:load
                        />
                        <p class="text-xl font-medium text-zinc-600 mt-6">
                            {service.excerpt}
                        </p>
                    </div>

                    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-4">
                        <a
                            href="/quote"
                            class="w-full sm:w-auto inline-flex items-center justify-center gap-4 bg-primary text-white px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:bg-black hover:text-white hover:scale-110 hover:shadow-[0_0_30px_rgba(255,61,61,0.4)] active:scale-95 group"
                        >
                            START YOUR PROJECT
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="transition-transform duration-500 group-hover:translate-x-1"
                            >
                                <line x1="5" y1="12" x2="19" y2="12" />
                                <polyline points="12 5 19 12 12 19" />
                            </svg>
                        </a>
                        <a
                            href={`/projects?filter=${service.title}`}
                            class="w-full sm:w-auto inline-flex items-center justify-center gap-4 border-2 border-black/20 text-black px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:border-primary hover:text-primary active:scale-95 group"
                        >
                            SEE OUR WORK
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="transition-transform duration-500 group-hover:translate-x-1"
                            >
                                <path d="M7 17L17 7M17 7H7M17 7V17" />
                            </svg>
                        </a>
                        {service.plans && service.plans.length > 0 && (
                            <a
                                href="#pricing"
                                class="w-full sm:w-auto inline-flex items-center justify-center gap-4 border-2 border-black/5 text-black/40 px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:border-primary hover:text-primary active:scale-95"
                            >
                                VIEW PRICING
                            </a>
                        )}
                    </div>
                </div>
            </section>
        )
    }

    {/* Service Content Section */}
    {
        service.contentBlocks &&
            service.contentBlocks.map((block) => {
                if (block.type === "html") {
                    return (
                        <section class="pb-20 bg-white text-black">
                            <div class="max-w-4xl mx-auto px-6">
                                <div
                                    class="prose prose-lg md:prose-2xl max-w-none prose-headings:text-black prose-headings:font-bold prose-p:text-zinc-600 prose-li:text-zinc-600 prose-strong:text-black prose-p:leading-relaxed opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                                    data-animate-on-scroll
                                >
                                    <div set:html={block.content} />
                                </div>
                            </div>
                        </section>
                    );
                } else if (block.type === "component") {
                    if (
                        block.component === "Technologies" &&
                        service.floatingIconSectionContent
                    ) {
                        return (
                            <FloatingIcons
                                client:load
                                content={service.floatingIconSectionContent}
                            />
                        );
                    }
                    if (block.component === "Pricing" && service.plans) {
                        return (
                            <div id="pricing">
                                <PricingCards
                                    plans={service.plans}
                                    serviceName={service.title}
                                />
                            </div>
                        );
                    }
                    if (block.component === "WebDevelopmentContent") {
                        return (
                            <section class="pb-20 bg-white">
                                <div class="max-w-6xl mx-auto px-6">
                                    <WebDevelopmentContent client:load />
                                </div>
                            </section>
                        );
                    }
                    if (block.component === "DigitalMarketingContent") {
                        return (
                            <section class="pb-20 bg-white">
                                <div class="max-w-6xl mx-auto px-6">
                                    <DigitalMarketingContent client:load />
                                </div>
                            </section>
                        );
                    }
                    if (block.component === "BrandingContent") {
                        return (
                            <section class="pb-20 bg-white">
                                <div class="max-w-6xl mx-auto px-6">
                                    <BrandingContent client:load />
                                </div>
                            </section>
                        );
                    }
                    if (block.component === "ProductionContent") {
                        return (
                            <section class="pb-20 bg-white">
                                <div class="max-w-6xl mx-auto px-6">
                                    <ProductionContent client:load />
                                </div>
                            </section>
                        );
                    }
                    if (block.component === "DesignContent") {
                        return (
                            <section class="pb-20 bg-white">
                                <div class="max-w-6xl mx-auto px-6">
                                    <DesignContent client:load />
                                </div>
                            </section>
                        );
                    }
                }
                return null;
            })
    }

    {
        relatedProjects.length > 0 && (
            <section class="py-20 md:py-32 bg-white border-t border-zinc-100">
                <div class="container mx-auto px-6">
                    <div
                        class="flex flex-wrap items-center justify-between mb-12 gap-6 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                        data-animate-on-scroll
                    >
                        <h2 class="text-3xl font-bold md:text-5xl text-black">
                            Recent {service.title} Work
                        </h2>
                        <a
                            href="/projects"
                            class="group inline-flex items-center gap-2 rounded-full border border-black px-6 py-3 text-sm font-medium text-black transition-all hover:bg-black hover:text-white"
                        >
                            View All Projects
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="transition-transform group-hover:translate-x-1"
                            >
                                <line x1="5" y1="12" x2="19" y2="12" />
                                <polyline points="12 5 19 12 12 19" />
                            </svg>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 gap-4 md:grid-cols-4 md:auto-rows-[250px]">
                        {relatedProjects.map((project, index) => (
                            <a
                                href={`/project/${project.slug}`}
                                class={`group relative overflow-hidden rounded-3xl ${project.class} block opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0`}
                                data-animate-on-scroll
                                style={`transition-delay: ${index * 100}ms;`}
                            >
                                <img
                                    src={project.image}
                                    alt={project.name}
                                    class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 transition-opacity duration-300 group-hover:opacity-80" />
                                <div class="absolute bottom-0 left-0 w-full p-6 translate-y-2 transition-transform duration-300 group-hover:translate-y-0">
                                    <div class="flex mb-1">
                                        <span class="text-sm font-medium text-white/80">
                                            {project.service}
                                        </span>
                                        <span class="text-white/80 mx-2">
                                            &#183;
                                        </span>
                                        <span class="text-sm font-medium text-white/80">
                                            {project.year}
                                        </span>
                                    </div>
                                    <h3 class="text-xl font-semibold text-white md:text-2xl">
                                        {project.name}
                                    </h3>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>
        )
    }

    {/* Other Services Navigation */}
    <section class="py-20 bg-zinc-50">
        <div class="max-w-[var(--max-width-container)] mx-auto px-6">
            <div
                class="flex items-center justify-between mb-12 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                data-animate-on-scroll
            >
                <h2 class="text-3xl font-black tracking-tighter text-[#0c1b33]">
                    Explore Other Services
                </h2>
                <a
                    href="/services"
                    class="text-sm font-black tracking-[0.2em] text-[#0c1b33]/40 hover:text-primary transition-colors"
                >
                    VIEW ALL
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    services
                        .filter((s) => s.slug !== service.slug)
                        .slice(0, 4)
                        .map((s, index) => (
                            <a
                                href={`/services/${s.slug}`}
                                class="group relative aspect-video rounded-3xl overflow-hidden opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                                data-animate-on-scroll
                                style={`transition-delay: ${index * 150}ms;`}
                            >
                                <img
                                    src={s.image}
                                    alt={s.title}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                />
                                <div class="absolute inset-0 bg-[#0c1b33]/60 group-hover:bg-[#0c1b33]/80 transition-colors duration-500 flex items-center justify-center p-6 text-center">
                                    <h4 class="font-black text-xl tracking-tighter text-white transition-all duration-500 group-hover:scale-110">
                                        {s.title}
                                    </h4>
                                </div>
                            </a>
                        ))
                }
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry, index) => {
                        if (entry.isIntersecting) {
                            setTimeout(() => {
                                entry.target.classList.add("animate-in");
                            }, index * 100);
                        }
                    });
                },
                { threshold: 0.1 },
            );

            document
                .querySelectorAll("[data-animate-on-scroll]")
                .forEach((el) => observer.observe(el));
        });
    </script>
</Layout>
