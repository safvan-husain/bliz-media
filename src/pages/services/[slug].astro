---
import Layout from "../../layouts/Layout.astro";
import PricingCards from "../../components/PricingCards.astro";
import FloatingIcons from "../../components/FloatingIcons";
import { services } from "../../data/services";

// Hero components mapping
import { DigitalMarketingHero } from "../../components/heroes/DigitalMarketingHero";

export async function getStaticPaths() {
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;
---

<Layout title={`${service.title} | Bliz Media`}>
    {
        service.slug === "digital-marketing" ? (
            <DigitalMarketingHero title={service.title} client:load />
        ) : (
            <section class="relative pt-40 pb-20 overflow-hidden">
                {/* Background Decorative Elements */}
                <div class="absolute top-0 right-0 w-1/2 h-full bg-zinc-50 -z-10 rounded-l-[5rem]" />

                <div class="max-w-[90rem] mx-auto px-6">
                    <div class="flex flex-col lg:flex-row gap-16 items-center">
                        <div
                            class="flex-1 space-y-8 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                            data-animate-on-scroll
                        >
                            <div class="space-y-4">
                                <span class="text-primary font-black tracking-[0.4em] text-xs uppercase opacity-60">
                                    Service {service.id}
                                </span>
                                <h1 class="text-6xl md:text-8xl font-black tracking-tighter text-[#0c1b33] leading-[0.9]">
                                    {service.title}
                                </h1>
                            </div>

                            <p class="text-2xl font-medium text-[#0c1b33]/60 italic leading-relaxed">
                                {service.excerpt}
                            </p>

                            <div class="prose prose-lg prose-zinc max-w-none prose-headings:text-[#0c1b33] prose-p:text-zinc-600 prose-li:text-zinc-600">
                                <div set:html={service.content} />
                            </div>

                            <div class="pt-8">
                                <a
                                    href="/quote"
                                    class="inline-flex items-center gap-4 bg-[#0c1b33] text-white px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs transition-all duration-500 hover:bg-primary hover:scale-110 hover:shadow-[0_0_30px_rgba(255,61,61,0.4)] active:scale-95 group"
                                >
                                    START YOUR PROJECT
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="3"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="transition-transform duration-500 group-hover:translate-x-1"
                                    >
                                        <line x1="5" y1="12" x2="19" y2="12" />
                                        <polyline points="12 5 19 12 12 19" />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <div
                            class="flex-1 relative opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                            data-animate-on-scroll
                        >
                            <div class="relative rounded-[3rem] overflow-hidden shadow-2xl shadow-[#0c1b33]/20 aspect-square">
                                <img
                                    src={service.image}
                                    alt={service.title}
                                    class="w-full h-full object-cover"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-[#0c1b33]/40 to-transparent" />
                            </div>

                            {/* Decorative Floaties */}
                            <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-primary/10 backdrop-blur-3xl rounded-full -z-10 animate-pulse" />
                            <div class="absolute -top-10 -right-10 w-60 h-60 bg-[#0c1b33]/5 backdrop-blur-3xl rounded-full -z-10" />
                        </div>
                    </div>
                </div>
            </section>
        )
    }

    {/* Floating Icons Section */}
    {
        service.floatingIconSectionContent && (
            <FloatingIcons
                client:visible
                content={service.floatingIconSectionContent}
            />
        )
    }

    {/* Pricing Cards Section - Only show if service has plans */}
    {
        service.plans && service.plans.length > 0 && (
            <PricingCards plans={service.plans} serviceName={service.title} />
        )
    }

    {/* Other Services Navigation */}
    <section class="py-20 bg-zinc-50">
        <div class="max-w-[var(--max-width-container)] mx-auto px-6">
            <div
                class="flex items-center justify-between mb-12 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                data-animate-on-scroll
            >
                <h2 class="text-3xl font-black tracking-tighter text-[#0c1b33]">
                    Explore Other Services
                </h2>
                <a
                    href="/services"
                    class="text-sm font-black tracking-[0.2em] text-[#0c1b33]/40 hover:text-primary transition-colors"
                >
                    VIEW ALL
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    services
                        .filter((s) => s.slug !== service.slug)
                        .slice(0, 4)
                        .map((s, index) => (
                            <a
                                href={`/services/${s.slug}`}
                                class="group space-y-4 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
                                data-animate-on-scroll
                                style={`transition-delay: ${index * 150}ms;`}
                            >
                                <div class="aspect-video rounded-3xl overflow-hidden relative">
                                    <img
                                        src={s.image}
                                        alt={s.title}
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                    />
                                    <div class="absolute inset-0 bg-[#0c1b33]/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="white"
                                            stroke-width="3"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <path d="M7 17L17 7M17 7H7M17 7V17" />
                                        </svg>
                                    </div>
                                </div>
                                <h4 class="font-black text-lg tracking-tight text-[#0c1b33]/80 group-hover:text-primary transition-colors">
                                    {s.title}
                                </h4>
                            </a>
                        ))
                }
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry, index) => {
                        if (entry.isIntersecting) {
                            setTimeout(() => {
                                entry.target.classList.add("animate-in");
                            }, index * 100);
                        }
                    });
                },
                { threshold: 0.1 },
            );

            document
                .querySelectorAll("[data-animate-on-scroll]")
                .forEach((el) => observer.observe(el));
        });
    </script>
</Layout>
