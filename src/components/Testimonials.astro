                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <button
                id="scroll-right"
                aria-label="Next testimonial"
                class="absolute -right-8 top-1/2 -translate-y-1/2 w-20 h-20 bg-white rounded-full shadow-[0_20px_40px_-10px_rgba(0,0,0,0.1)] flex items-center justify-center text-gray-400 hover:text-blue-600 hover:scale-105 transition-all z-30 opacity-0 group-hover:opacity-100 translate-x-4 group-hover:translate-x-0 hidden xl:flex border border-gray-50"
            >
                <svg
                    class="w-10 h-10"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>
</section>

<script>
    const track = document.getElementById("testimonial-track") as HTMLElement;
    const leftBtn = document.getElementById("scroll-left");
    const rightBtn = document.getElementById("scroll-right");

    if (track && leftBtn && rightBtn) {
        const getScrollAmount = () => {
            const card = track.querySelector(".flex-none");
            if (card) {
                return card.clientWidth + 32; // Width + gap
            }
            return 482;
        };

        leftBtn.addEventListener("click", () => {
            track.scrollBy({ left: -getScrollAmount(), behavior: "smooth" });
        });

        rightBtn.addEventListener("click", () => {
            track.scrollBy({ left: getScrollAmount(), behavior: "smooth" });
        });

        // Auto-scroll logic
        let isHovering = false;
        track.addEventListener("mouseenter", () => (isHovering = true));
        track.addEventListener("mouseleave", () => (isHovering = false));

        const handleAutoScroll = () => {
            if (!isHovering) {
                const isAtEnd =
                    track.scrollLeft + track.clientWidth >=
                    track.scrollWidth - 100;

                if (isAtEnd) {
                    track.scrollTo({ left: 0, behavior: "smooth" });
                } else {
                    track.scrollBy({
                        left: getScrollAmount(),
                        behavior: "smooth",
                    });
                }
            }
        };

        let interval = setInterval(handleAutoScroll, 6000);

        const resetInterval = () => {
            clearInterval(interval);
            interval = setInterval(handleAutoScroll, 6000);
        };

        leftBtn.addEventListener("click", resetInterval);
        rightBtn.addEventListener("click", resetInterval);

        track.addEventListener("touchstart", () => (isHovering = true), {
            passive: true,
        });
        track.addEventListener(
            "touchend",
            () => {
                isHovering = false;
                resetInterval();
            },
            { passive: true },
        );
    }
</script>
