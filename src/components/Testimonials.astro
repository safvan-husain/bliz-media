---

<section id="testimonials" class="py-24 bg-white overflow-hidden">
    <div class="container mx-auto px-6">
        <div
            class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 gap-8"
        >
            <div class="max-w-2xl">
                <CurveRevealText
                    as="span"
                    text="Client Success"
                    className="text-blue-600 font-bold tracking-widest text-xs uppercase bg-blue-50 px-3 py-1.5 rounded-full"
                    delayStepMs={20}
                />
                <CurveRevealText
                    as="h2"
                    text="What Clients Say"
                    className="text-5xl md:text-7xl font-black text-gray-900 mt-6 tracking-tight"
                    baseDelayMs={80}
                />
            </div>
            <div class="max-w-xs">
                <CurveRevealText
                    as="p"
                    text="Hear from our clients about their experiences and our quality services."
                    className="text-gray-500 text-lg leading-relaxed font-medium"
                    delayStepMs={24}
                    baseDelayMs={180}
                />
            </div>
        </div>

        <div class="relative group">
            <!-- Gradient Overlays for smooth entry/exit -->
            <div
                class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white via-white/80 to-transparent z-10 pointer-events-none hidden xl:block"
            >
            </div>
            <div
                class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white via-white/80 to-transparent z-10 pointer-events-none hidden xl:block"
            >
            </div>

            <!-- Carousel Container -->
            <div
                id="testimonial-track"
                class="flex gap-8 overflow-x-auto pb-12 pt-4 px-4 snap-x snap-mandatory scroll-smooth [scrollbar-width:none] [-ms-overflow-style:none] [-webkit-overflow-scrolling:touch]"
            >
                {
                    testimonials.map((t) => (
                        <div class="flex-none w-[85vw] md:w-[450px] snap-center md:snap-start">
                            <div class="bg-white border border-gray-100 rounded-[2.5rem] p-10 shadow-[0_20px_50px_-20px_rgba(0,0,0,0.05)] hover:shadow-[0_40px_80px_-15px_rgba(59,130,246,0.1)] transition-all duration-700 h-full flex flex-col justify-between group/card relative overflow-hidden ring-1 ring-gray-50 hover:ring-blue-100">
                                <div class="relative z-10">
                                    <div class="flex items-center justify-between mb-10">
                                        <div class="flex items-center gap-5">
                                            <div class="relative">
                                                <div class="absolute -inset-1 bg-gradient-to-tr from-blue-600 to-cyan-400 rounded-2xl blur opacity-20 group-hover/card:opacity-40 transition duration-700" />
                                                <img
                                                    src={t.avatar}
                                                    alt={t.name}
                                                    class="relative w-16 h-16 rounded-2xl object-cover shadow-sm grayscale-[0.3] group-hover/card:grayscale-0 transition-all duration-700"
                                                />
                                                <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center border-2 border-white shadow-lg scale-0 group-hover/card:scale-100 transition-transform duration-500 delay-100">
                                                    <svg
                                                        class="w-3.5 h-3.5 text-white"
                                                        viewBox="0 0 20 20"
                                                        fill="currentColor"
                                                    >
                                                        <path
                                                            fill-rule="evenodd"
                                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                            clip-rule="evenodd"
                                                        />
                                                    </svg>
                                                </div>
                                            </div>
                                            <div>
                                                <h4 class="font-bold text-gray-900 text-lg leading-tight group-hover/card:text-blue-600 transition-colors duration-500">
                                                    {t.name}
                                                </h4>
                                                <p class="text-xs text-gray-400 font-bold tracking-widest uppercase mt-1.5">
                                                    {t.time}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="bg-gray-50 p-2.5 rounded-2xl group-hover/card:bg-white transition-colors duration-500 shadow-sm border border-transparent group-hover/card:border-gray-100">
                                            <svg
                                                class="w-7 h-7"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    fill="#4285F4"
                                                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                                />
                                                <path
                                                    fill="#34A853"
                                                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                                />
                                                <path
                                                    fill="#FBBC05"
                                                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z"
                                                />
