---
const comparisonData = [
    {
        feature: "Focus",
        others: "General services",
        we: "Specialized in branding and web design",
    },
    {
        feature: "Client Approach",
        others: "General services",
        we: "Up-to-date with industry trends",
    },
    {
        feature: "Design Philosophy",
        others: "Generic templates",
        we: "Custom and unique",
    },
    {
        feature: "Technical Process",
        others: "Limited",
        we: "Partnership-oriented",
    },
    {
        feature: "Managing Project",
        others: "Not structured",
        we: "Efficient and organized",
    },
];
---

<section class="py-20 md:py-32 bg-[#F9F9FB] relative overflow-hidden">
    <!-- Background accents -->
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-amber-200/20 rounded-full blur-[100px] -z-10 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 max-w-5xl relative z-10">
        <div class="text-center mb-12">
            <span
                class="inline-block px-6 py-2 rounded-full bg-gradient-to-r from-amber-100 to-yellow-100 text-amber-700 text-sm font-semibold mb-6 shadow-sm border border-amber-200/50"
            >
                Our Edge
            </span>
            <h2
                class="text-3xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight"
            >
                Why Choose Us
            </h2>
            <p class="text-gray-500 text-lg max-w-xl mx-auto">
                How we stand out from competitors with tailored solutions and
                results.
            </p>
        </div>

        <!-- Comparison Table Container -->
        <div
            class="bg-[#F8F7F4] rounded-3xl border border-stone-100 shadow-2xl"
        >
            <div class="grid grid-cols-1 md:grid-cols-2">
                <!-- Headings Row (Desktop) -->
                <div class="hidden md:contents">
                    <div
                        class="p-4 text-center text-lg font-semibold text-gray-500 border-b border-gray-200/60"
                    >
                        Others
                    </div>
                    <div
                        class="p-4 text-center text-lg font-bold text-amber-600 bg-amber-50/50 rounded-t-2xl border-b border-gray-200/60"
                    >
                        Bliz Media
                    </div>
                </div>

                <!-- Rows -->
                {
                    comparisonData.map((item, index) => {
                        const isEven = index % 2 === 0;
                        return (
                        <div class={`col-span-full grid grid-cols-1 md:grid-cols-2 items-stretch border-b border-gray-200/60 last:border-0 opacity-0 translate-y-8 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0`}
                             data-animate-on-scroll
                             style={`transition-delay: ${index * 150}ms;`}>
                            <!-- Others Column (Includes Attribute Name) -->
                            <div class={`flex flex-col md:flex-row md:items-center gap-4 p-6 md:pl-8 transition-colors duration-300 ${isEven ? 'bg-white' : 'bg-stone-100'}`}>
                                <div class="flex items-center gap-3">
<div class="flex-shrink-0 w-6 h-6 rounded-full bg-red-100 flex items-center justify-center text-red-500">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="3"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="w-3 h-3"
                                        >
                                            <path d="M18 6 6 18" />
                                            <path d="m6 6 12 12" />
                                        </svg>
                                    </div>
                                    <span class="font-bold text-gray-900 text-sm uppercase tracking-wider md:text-base md:normal-case md:tracking-normal">
                                        {item.feature}
                                    </span>
                                </div>
                                <div class="flex items-center gap-3 bg-red-50/30 md:bg-transparent p-3 md:p-0 rounded-lg">
                                    
                                    <span class="text-gray-500 text-sm md:text-base">
                                        {item.others}
                                    </span>
                                </div>
                            </div>

                            <!-- Bliz Media Column -->
                            <div class={`flex items-center gap-3 p-6 relative md:justify-start transition-colors duration-300 ${isEven ? 'bg-amber-50' : 'bg-white'}`}>
                                <!-- Mobile Label for Bliz Media -->
                                <div class="md:hidden absolute -top-3 left-6 bg-amber-100 text-amber-700 text-[10px] px-2 py-0.5 rounded-full uppercase font-bold tracking-wider">
                                    Us
                                </div>

                                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="3"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="w-3.5 h-3.5"
                                    >
                                        <polyline points="20 6 9 17 4 12" />
                                    </svg>
                                </div>
                                <span class="text-gray-900 font-medium text-sm md:text-base text-left">
                                    {item.we}
                                </span>
                            </div>
                        </div>
                    );
                })
                }
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.classList.add('animate-in');
                        }, index * 100); // Stagger by 100ms
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('[data-animate-on-scroll]').forEach(el => observer.observe(el));
        });
    </script>
</section>
