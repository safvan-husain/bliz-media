---
import { otherTeamMembers } from "../data/team";
import HorizontalTeamMembers from "./HorizontalTeamMembers";
import TeamMembersGrid from "./TeamMembersGrid.astro";
---

<section id="other-team" class="relative bg-zinc-50">
    {/* Subtle Grain Texture */}
    <div
        class="absolute inset-0 pointer-events-none opacity-[0.03] z-50 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
    >
    </div>

    <div
        class="lg:hidden max-w-[var(--max-width-container)] mx-auto px-6 relative z-10 pt-32 pb-10"
    >
        <div
            class="flex flex-col md:flex-row justify-between items-center gap-12"
        >
            <div class="max-w-2xl text-center md:text-start">
                <span
                    class="text-primary font-bold tracking-[0.2em] text-sm mb-4 block"
                    >Our People</span
                >
                <h2
                    class="text-4xl md:text-6xl font-black tracking-tight text-secondary leading-[0.85]"
                >
                    Meet The Team
                </h2>
            </div>
            <div class="max-w-sm pb-2">
                <p
                    class="text-lg text-center md:text-end font-medium text-secondary/60 leading-relaxed"
                >
                    The creative minds behind our success stories.
                </p>
            </div>
        </div>
    </div>

    <div class="lg:hidden">
        <TeamMembersGrid members={otherTeamMembers} />
    </div>

    <div class="hidden lg:block">
        <HorizontalTeamMembers
            client:media="(min-width: 1024px)"
            members={otherTeamMembers}
        />
    </div>
</section>
