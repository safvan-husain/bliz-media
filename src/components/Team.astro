---

<section id="team" class="relative overflow-hidden bg-white px-6 py-36">
    <!-- Mesh Gradient Background -->
    <div class="absolute inset-0 z-0 opacity-40">
        <div
            class="absolute -left-[10%] -top-[10%] h-[60%] w-[60%] rounded-full bg-primary/5 blur-[120px]"
        >
        </div>
        <div
            class="absolute -right-[10%] -bottom-[10%] h-[60%] w-[60%] rounded-full bg-primary/5 blur-[120px]"
        >
        </div>
    </div>
    <div
        class="relative z-10 mx-auto flex max-w-[var(--max-width-container)] flex-col gap-20"
    >
        <div
            class="flex flex-col gap-8 md:flex-row md:items-end md:justify-between"
        >
            <div>
                <span
                    class="mb-4 block text-xs font-extrabold uppercase tracking-[0.2em] text-muted-foreground"
                >
                    Our Talent
                </span>
                <h2
                    class="text-5xl font-black leading-none text-foreground md:text-7xl"
                >
                    The People
                </h2>
                <h2
                    class="text-5xl font-black leading-none text-foreground md:text-7xl"
                >
                    Behind Bliz Media
                </h2>
            </div>
            <div class="md:max-w-sm">
                <p
                    class="text-lg font-medium leading-relaxed text-muted-foreground"
                >
                    A collective of creative minds and strategic thinkers
                    dedicated to elevating your brand through innovation and
                    excellence.
                </p>
            </div>
        </div>

        <div class="flex flex-col gap-16">
            <div class="flex flex-col gap-8">
                <div class="group relative mx-auto mt-48 w-full max-w-5xl">
                    <div
                        class="relative grid grid-cols-1 items-end md:grid-cols-2"
                    >
                        {
                            founders.map((member, i) => (
                                <div
                                    class={`relative flex flex-col items-center pb-12 px-6 ${i === 0 ? "md:items-end md:pr-12" : "md:items-start md:pl-12"}`}
                                >
                                    {/* The Cut-out Image */}
                                    <div class="relative -mt-40 w-full max-w-[420px] flex justify-center">
                                        <img
                                            src={member.imagePath}
                                            alt={member.name}
                                            class={`h-auto w-full object-contain transition duration-700 ease-out group-hover:scale-[1.05] filter brightness-110 contrast-110 ${i === 0 ? "md:translate-x-4" : "md:-translate-x-4"}`}
                                            style="mix-blend-mode: multiply;"
                                        />
                                    </div>

                                    {/* Info */}
                                    <div class="relative z-10 -mt-8 flex flex-col items-center text-center">
                                        <h4 class="text-4xl font-black tracking-tight text-foreground md:text-6xl">
                                            {member.name}
                                        </h4>
                                        <div class="mt-2 text-sm font-extrabold uppercase tracking-[0.2em] text-primary">
                                            {member.role}
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <div class="flex flex-col gap-8 max-w-6xl mx-auto">
                <div>
                    <p
                        class="mt-3 max-w-2xl text-lg leading-relaxed text-muted-foreground"
                    >
                        The crew that turns strategy into real, repeatable
                        execution.
                    </p>
                </div>

                <div class="flex flex-col gap-12">
                    {
                        leaders.map((member) => (
                            <div class="group flex flex-col items-center gap-8 md:flex-row md:gap-16">
                                <div class="relative w-full max-w-[250px] flex-none overflow-hidden rounded-3xl">
                                    <img
                                        src={member.imagePath}
                                        alt={member.name}
                                        class="aspect-[4/5] w-full object-cover transition duration-700 ease-[cubic-bezier(0.2,0.8,0.2,1)] grayscale group-hover:scale-105"
                                        loading="lazy"
                                    />
                                </div>
                                <div class="flex flex-col gap-4">
                                    <div class="flex flex-col gap-1">
                                        <div class="text-xs font-extrabold uppercase tracking-[0.2em] text-primary">
                                            {member.role}
                                        </div>
                                        <h4 class="text-3xl font-black tracking-tight text-foreground md:text-5xl">
                                            {member.name}
                                        </h4>
                                    </div>
                                    <p class="max-w-2xl text-lg leading-relaxed text-muted-foreground">
                                        {member.description}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div class="flex flex-col gap-8">
                <div>
                    <p
                        class="mt-3 max-w-2xl text-lg leading-relaxed text-muted-foreground"
                    >
                        Specialists across design, engineering, and growth.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4"
                >
                    {
                        team.map((member) => (
                            <div class="flex items-center gap-4 rounded-2xl p-4 transition-colors hover:bg-foreground/5">
                                <img
                                    src={member.imagePath}
                                    alt={member.name}
                                    class="h-12 w-12 flex-none rounded-full object-cover grayscale transition duration-300 hover:grayscale-0"
                                    loading="lazy"
                                />
                                <div class="min-w-0">
                                    <div class="truncate text-base font-extrabold tracking-tight text-foreground">
                                        {member.name}
                                    </div>
                                    <div class="truncate text-xs font-bold uppercase tracking-wider text-muted-foreground">
                                        {member.role}
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <div
        class="pointer-events-none absolute -bottom-[5%] -right-2 select-none text-[20vw] font-black leading-none text-foreground/5"
    >
        EXPERTISE
    </div>
</section>
