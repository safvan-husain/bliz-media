---

<section
    id="team"
    class="relative overflow-hidden bg-foreground px-6 py-36 text-white"
>
    <!-- Background Accents -->
    <div class="absolute inset-0 z-0 opacity-20">
        <div
            class="absolute -left-[10%] -top-[10%] h-[60%] w-[60%] rounded-full bg-primary/20 blur-[120px]"
        >
        </div>
        <div
            class="absolute -right-[10%] -bottom-[10%] h-[60%] w-[60%] rounded-full bg-primary/20 blur-[120px]"
        >
        </div>
    </div>

    <div class="relative z-10 mx-auto max-w-[var(--max-width-container)]">
        <!-- Founders Section (Matched to Image) -->
        <div class="flex flex-col gap-12 md:flex-row md:items-start lg:gap-20">
            <div class="md:w-1/3 lg:w-1/4">
                <h2
                    class="text-6xl font-black leading-[0.9] tracking-tighter md:text-7xl lg:text-8xl"
                >
                    Meet <br /> the Team
                </h2>
            </div>

            <div
                class="grid flex-1 grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8"
            >
                {
                    founders.map((member) => (
                        <div class="group flex flex-col items-center text-center">
                            <div
                                class={`relative aspect-[1/1.6] w-full max-w-[300px] overflow-hidden rounded-full ${member.bgColor} transition-transform duration-500 hover:scale-105`}
                            >
                                <img
                                    src={member.imagePath}
                                    alt={member.name}
                                    class="h-full w-full object-cover object-top mix-blend-luminosity brightness-110 contrast-110 transition-all duration-500 group-hover:mix-blend-normal group-hover:scale-110"
                                    loading="lazy"
                                />
                            </div>
                            <div class="mt-6">
                                <h3 class="text-2xl font-bold tracking-tight">
                                    {member.name}
                                </h3>
                                <p class="text-sm font-semibold uppercase tracking-widest text-white/50">
                                    {member.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Leaders Section -->
        <div class="mt-40">
            <div class="mb-12 flex flex-col gap-4">
                <h3 class="text-3xl font-black md:text-5xl">Leadership</h3>
                <p class="max-w-2xl text-lg text-white/60">
                    The core team driving strategy and execution across our key
                    departments.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-4">
                {
                    leaders.map((member) => (
                        <div class="group flex flex-col gap-6">
                            <div class="relative aspect-[4/5] w-full overflow-hidden rounded-2xl bg-white/5 border border-white/10">
                                <img
                                    src={member.imagePath}
                                    alt={member.name}
                                    class="h-full w-full object-cover transition duration-700 ease-out grayscale group-hover:grayscale-0 group-hover:scale-105"
                                    loading="lazy"
                                />
                            </div>
                            <div class="flex flex-col gap-1">
                                <div class="text-xs font-bold uppercase tracking-[0.2em] text-primary">
                                    {member.role}
                                </div>
                                <h4 class="text-2xl font-black tracking-tight">
                                    {member.name}
                                </h4>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Core Team Section -->
        <div class="mt-40">
            <div class="mb-12 flex flex-col gap-4">
                <h3 class="text-3xl font-black md:text-5xl">Core Team</h3>
                <p class="max-w-2xl text-lg text-white/60">
                    Specialists across design, engineering, and growth dedicated
                    to your success.
                </p>
            </div>

            <div
                class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
            >
                {
                    team.map((member) => (
                        <div class="flex items-center gap-4 rounded-2xl bg-white/5 p-4 border border-white/5 transition-colors hover:bg-white/10 hover:border-white/20">
                            <img
                                src={member.imagePath}
                                alt={member.name}
                                class="h-12 w-12 flex-none rounded-full object-cover grayscale transition duration-300 group-hover:grayscale-0"
                                loading="lazy"
                            />
                            <div class="min-w-0">
                                <div class="truncate text-base font-bold tracking-tight">
                                    {member.name}
                                </div>
                                <div class="truncate text-xs font-bold uppercase tracking-wider text-white/40">
                                    {member.role}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>

    <!-- Background Decorative Text -->
    <div
        class="pointer-events-none absolute -bottom-[5%] -right-2 select-none text-[20vw] font-black leading-none text-white/5"
    >
        EXPERTISE
    </div>
</section>
