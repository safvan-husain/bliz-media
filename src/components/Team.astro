---
interface TeamMember {
    name: string;
    role: string;
    imagePath: string;
    description: string;
}

const teamMembers: TeamMember[] = [
    {
        name: "Alex Rivera",
        role: "Founder & CEO",
        imagePath:
            "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=1000&auto=format&fit=crop",
        description:
            "Visionary leader with 15+ years of experience in digital transformation and strategic branding. Alex has led Bliz Media to become a premier agency in the region.",
    },
    {
        name: "Sarah Chen",
        role: "Creative Director",
        imagePath:
            "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=1000&auto=format&fit=crop",
        description:
            "Award-winning designer focused on creating immersive brand experiences. Sarah's philosophy centers on the intersection of human psychology and visual storytelling.",
    },
    {
        name: "Marcus Thorne",
        role: "Head of Development",
        imagePath:
            "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1000&auto=format&fit=crop",
        description:
            "Full-stack architect dedicated to building scalable, high-performance web solutions. Marcus ensures that every project we deliver is technically flawless.",
    },
    {
        name: "Elena Rodriguez",
        role: "Marketing Strategist",
        imagePath:
            "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?q=80&w=1000&auto=format&fit=crop",
        description:
            "Data-driven marketer specializing in growth hacking and cross-channel digital campaigns. Elena turns complex data into actionable success.",
    },
];
---

<section
    id="team"
    class="relative overflow-hidden bg-gray-50 px-6 py-36"
>
    <div class="relative z-10 mx-auto flex max-w-6xl flex-col gap-16">
        <div class="flex flex-col gap-8 md:flex-row md:items-end md:justify-between">
            <div>
                <span
                    class="mb-4 block text-xs font-extrabold uppercase tracking-[0.2em] text-blue-500"
                >
                    Our Talent
                </span>
                <h2
                    class="text-5xl font-black leading-none text-gray-900 md:text-7xl"
                >
                    Meet the Visionaries
                </h2>
            </div>
            <div class="md:max-w-sm">
                <p class="text-lg font-medium leading-relaxed text-gray-600">
                    A collective of creative minds and strategic thinkers
                    dedicated to elevating your brand through innovation and
                    excellence.
                </p>
            </div>
        </div>

        <div class="flex flex-col gap-6">
            {
                teamMembers.map((member, index) => (
                    <div
                        class="group flex flex-col overflow-hidden rounded-[40px] border border-black/5 bg-white hover:shadow-[0_10px_30px_-10px_rgba(0,0,0,0.05)] transition duration-700 ease-[cubic-bezier(0.2,0.8,0.2,1)] hover:-translate-y-1 hover:scale-[1.01] hover:border-blue-500/10 md:h-[380px] md:flex-row md:items-stretch md:even:flex-row-reverse"
                    >
                        <div
                            class="relative h-80 w-full overflow-hidden md:h-full md:w-[400px] md:flex-none"
                        >
                            <img
                                src={member.imagePath}
                                alt={member.name}
                                class="h-full w-full object-cover transition duration-700 ease-[cubic-bezier(0.2,0.8,0.2,1)] grayscale group-hover:scale-105 group-hover:grayscale-0"
                            />
                            <div
                                class="absolute left-6 top-6 flex h-10 w-10 items-center justify-center rounded-xl bg-black/30 text-sm font-black text-white backdrop-blur"
                            >
                                0{index + 1}
                            </div>
                        </div>
                        <div
                            class="flex flex-1 flex-col justify-center gap-5 px-6 py-10 md:px-12"
                        >
                            <div
                                class="text-xs font-extrabold uppercase tracking-[0.15em] text-blue-500"
                            >
                                {member.role}
                            </div>
                            <h3
                                class="text-3xl font-extrabold tracking-tight text-gray-900 md:text-[2.5rem]"
                            >
                                {member.name}
                            </h3>
                            <p
                                class="max-w-2xl text-lg leading-relaxed text-gray-600"
                            >
                                {member.description}
                            </p>
                            <div class="mt-auto">
                                <a
                                    href="#"
                                    class="group/link inline-flex items-center gap-3 text-xs font-bold uppercase tracking-[0.05em] text-gray-900 transition hover:gap-4 hover:text-blue-500"
                                >
                                    <span>View Full Profile</span>
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2.5"
                                        class="h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1"
                                    >
                                        <path d="M5 12H19M19 12L12 5M19 12L12 19" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>

    <div
        class="pointer-events-none absolute -bottom-[5%] -right-2 select-none text-[20vw] font-black leading-none text-black/5"
    >
        EXPERTISE
    </div>
</section>
