---
import ScrollTeamEXP from "./ScrollTeamEXP";
import { founders, leaders, coreTeam } from "../data/team";
---

<section
    id="team"
    class="relative overflow-hidden bg-[#0c1b33] text-white pt-0"
>
    <!-- Desktop/Large Devices Component -->
    <div class="hidden md:block">
        <ScrollTeamEXP client:load />
    </div>

    <!-- Mobile/Small Devices Layout -->
    <div class="md:hidden px-6 py-24">
        <!-- Background Accents -->
        <div class="absolute inset-0 z-0 opacity-20 pointer-events-none">
            <div
                class="absolute -left-[10%] -top-[10%] h-[60%] w-[60%] rounded-full bg-primary/20 blur-[120px]"
            >
            </div>
            <div
                class="absolute -right-[10%] -bottom-[10%] h-[60%] w-[60%] rounded-full bg-primary/20 blur-[120px]"
            >
            </div>
        </div>

        <div class="relative z-10 mx-auto max-w-[var(--max-width-container)]">
            <div class="mb-16">
                <h2 class="text-6xl font-black leading-[0.9] tracking-tighter">
                    Meet <br /> the Team
                </h2>
            </div>

            <div class="grid grid-cols-2 gap-6">
                {
                    founders.map((member) => (
                        <div class="group flex flex-col items-center text-center">
                            <div
                                class={`relative aspect-[1/1.6] w-full max-w-[300px] rounded-b-[150px] ${member.bgColor} border-[6px] border-white shadow-2xl`}
                            >
                                <img
                                    src={member.imagePath}
                                    alt={member.name}
                                    class="h-full w-full object-cover object-top mix-blend-luminosity"
                                    loading="lazy"
                                />
                            </div>
                            <div class="mt-8">
                                <h3 class="text-3xl font-black tracking-tight">
                                    {member.name}
                                </h3>
                                <p class="text-sm font-extrabold uppercase tracking-[0.2em] text-white/50">
                                    {member.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div class="mt-32 z-[100]">
                <h3 class="text-4xl font-black mb-12">Leadership</h3>
                <div class="grid grid-cols-2 gap-6">
                    {
                        leaders.map((member) => (
                            <div class="group flex flex-col gap-6">
                                <div class="relative aspect-[4/5] w-full rounded-2xl bg-white/5 border border-white/10">
                                    <img
                                        src={member.imagePath}
                                        alt={member.name}
                                        class="h-full w-full object-cover grayscale"
                                        loading="lazy"
                                    />
                                </div>
                                <div class="flex flex-col gap-1">
                                    <div class="text-xs font-bold uppercase tracking-[0.2em] text-primary">
                                        {member.role}
                                    </div>
                                    <h4 class="text-2xl font-black tracking-tight">
                                        {member.name}
                                    </h4>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="md:h-[50vh]">

    </div>
</section>
