---
interface TeamMember {
    name: string;
    role: string;
    imagePath: string;
    description: string;
}

const teamMembers: TeamMember[] = [
    {
        name: "Alex Rivera",
        role: "Founder & CEO",
        imagePath:
            "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=1000&auto=format&fit=crop",
        description:
            "Visionary leader with 15+ years of experience in digital transformation and strategic branding. Alex has led Bliz Media to become a premier agency in the region.",
    },
    {
        name: "Sarah Chen",
        role: "Creative Director",
        imagePath:
            "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=1000&auto=format&fit=crop",
        description:
            "Award-winning designer focused on creating immersive brand experiences. Sarah's philosophy centers on the intersection of human psychology and visual storytelling.",
    },
    {
        name: "Marcus Thorne",
        role: "Head of Development",
        imagePath:
            "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1000&auto=format&fit=crop",
        description:
            "Full-stack architect dedicated to building scalable, high-performance web solutions. Marcus ensures that every project we deliver is technically flawless.",
    },
    {
        name: "Elena Rodriguez",
        role: "Marketing Strategist",
        imagePath:
            "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?q=80&w=1000&auto=format&fit=crop",
        description:
            "Data-driven marketer specializing in growth hacking and cross-channel digital campaigns. Elena turns complex data into actionable success.",
    },
];
---

<section id="team" class="team-section">
    <div class="team-container">
        <div class="section-top">
            <div class="header-left">
                <span class="eyebrow">Our Talent</span>
                <h2 class="section-title">Meet the Visionaries</h2>
            </div>
            <div class="header-right">
                <p class="section-subtitle">
                    A collective of creative minds and strategic thinkers
                    dedicated to elevating your brand through innovation and
                    excellence.
                </p>
            </div>
        </div>

        <div class="team-stack">
            {
                teamMembers.map((member, index) => (
                    <div
                        class="member-card"
                        style={`--delay: ${index * 0.15}s`}
                    >
                        <div class="member-image-side">
                            <img
                                src={member.imagePath}
                                alt={member.name}
                                class="member-img"
                            />
                            <div class="member-number">0{index + 1}</div>
                        </div>
                        <div class="member-content-side">
                            <div class="role-tag">{member.role}</div>
                            <h3 class="member-name">{member.name}</h3>
                            <p class="member-bio">{member.description}</p>
                            <div class="member-links">
                                <a href="#" class="profile-link">
                                    <span>View Full Profile</span>
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2.5"
                                        class="link-arrow"
                                    >
                                        <path d="M5 12H19M19 12L12 5M19 12L12 19" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Decorative BG Text -->
    <div class="bg-text">EXPERTISE</div>
</section>

<style>
    .team-section {
        padding: 140px 24px;
        background-color: #fafafa;
        position: relative;
        overflow: hidden;
    }

    .team-container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
    }

    .section-top {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 100px;
        gap: 32px;
    }

    @media (min-width: 768px) {
        .section-top {
            flex-direction: row;
            align-items: flex-end;
        }
    }

    .eyebrow {
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: #3b82f6;
        margin-bottom: 16px;
        display: block;
    }

    .section-title {
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 900;
        line-height: 0.95;
        color: #111111;
        letter-spacing: -0.04em;
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: #666666;
        max-width: 400px;
        line-height: 1.6;
        font-weight: 500;
    }

    .team-stack {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .member-card {
        display: flex;
        flex-direction: column;
        background: white;
        border-radius: 40px;
        overflow: hidden;
        transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        animation-delay: var(--delay);
    }

    @media (min-width: 768px) {
        .member-card {
            flex-direction: row;
            height: 380px;
            align-items: stretch;
        }

        .member-card:nth-child(even) {
            flex-direction: row-reverse;
        }
    }

    .member-card:hover {
        transform: translateY(-5px) scale(1.01);
        box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.1);
        border-color: rgba(59, 130, 246, 0.1);
    }

    .member-image-side {
        flex: 0 0 320px;
        position: relative;
        overflow: hidden;
    }

    @media (min-width: 768px) {
        .member-image-side {
            flex: 0 0 400px;
        }
    }

    .member-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(0.2);
        transition: all 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .member-card:hover .member-img {
        filter: grayscale(0);
        transform: scale(1.05);
    }

    .member-number {
        position: absolute;
        top: 24px;
        left: 24px;
        font-size: 0.875rem;
        font-weight: 900;
        color: white;
        background: rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        z-index: 2;
    }

    .member-content-side {
        padding: 60px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

    .role-tag {
        font-size: 0.75rem;
        font-weight: 800;
        color: #3b82f6;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 20px;
    }

    .member-name {
        font-size: 2.5rem;
        font-weight: 800;
        color: #111111;
        margin-bottom: 20px;
        letter-spacing: -0.02em;
    }

    .member-bio {
        font-size: 1.125rem;
        line-height: 1.7;
        color: #555555;
        margin-bottom: 40px;
        max-width: 500px;
    }

    .member-links {
        margin-top: auto;
    }

    .profile-link {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: #111111;
        font-weight: 700;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
    }

    .link-arrow {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .profile-link:hover {
        color: #3b82f6;
        gap: 16px;
    }

    .profile-link:hover .link-arrow {
        transform: translateX(4px);
    }

    .bg-text {
        position: absolute;
        bottom: -5%;
        right: -2%;
        font-size: 20vw;
        font-weight: 950;
        color: rgba(0, 0, 0, 0.02);
        pointer-events: none;
        user-select: none;
        line-height: 1;
        z-index: 0;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 767px) {
        .member-content-side {
            padding: 40px 24px;
        }

        .member-name {
            font-size: 2rem;
        }

        .member-image-side {
            height: 300px;
        }
    }
</style>
