---
const services = [
  {
    id: "01",
    title: "Branding",
    items: [
      "Creative Direction",
      "Brand Identity",
      "Branding Strategy",
      "Graphic Design",
    ],
  },
  {
    id: "02",
    title: "Digital Marketing",
    items: [
      "Social Media Marketing",
      "Performance Marketing",
      "Search Engine Optimisation",
      "Strategy",
      "Market Research",
    ],
  },
  {
    id: "03",
    title: "Design",
    items: ["UX/UI Design", "Graphic Design"],
    image: "/images/service-design.png",
  },
  {
    id: "04",
    title: "Development",
    items: [
      "WordPress Website",
      "Custom Website",
      "Softwares",
      "E-Commerce",
      "Shopify",
    ],
  },
  {
    id: "05",
    title: "Production",
    items: [
      "Videography",
      "Photography",
      "Video Editing",
      "Product Photography",
    ],
  },
];
---

<section id="services" class="py-24 bg-background overflow-hidden">
  <div class="max-w-[var(--max-width-container)] mx-auto px-6">
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-24 gap-8"
    >
      <div class="max-w-2xl">
        <h2
          class="text-6xl md:text-8xl font-black tracking-tight text-foreground leading-[0.85]"
        >
          OUR <br /><span class="text-muted-foreground/30">SERVICES</span>
        </h2>
      </div>
      <div class="max-w-sm pb-2">
        <p class="text-lg font-medium text-muted-foreground leading-relaxed">
          We combine strategy with creativity to deliver exceptional digital
          experiences that drive growth and brand loyalty.
        </p>
      </div>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-16 gap-y-32"
    >
      {
        services.map((service) => (
          <div class="group flex flex-col relative">
            <div class="flex items-baseline justify-between mb-10 border-b border-foreground/5 pb-8 relative">
              <h3 class="text-4xl font-extrabold text-foreground tracking-tight">
                {service.title}
              </h3>
              <span class="text-sm font-black text-muted-foreground/20 group-hover:text-foreground transition-colors duration-500">
                ({service.id})
              </span>
              <div class="absolute bottom-0 left-0 h-[1px] w-0 bg-foreground transition-all duration-700 ease-out group-hover:w-full" />
            </div>

            <ul class="space-y-5 mb-12 flex-grow">
              {service.items.map((item) => (
                <li class="text-xl font-medium text-muted-foreground group-hover:text-foreground transition-colors duration-300 flex items-center gap-4">
                  <span class="w-1.5 h-1.5 rounded-full bg-muted-foreground/20 group-hover:bg-foreground transition-all duration-300" />
                  {item}
                </li>
              ))}
            </ul>

            {service.image && (
              <div class="mt-4 overflow-hidden rounded-[2.5rem] bg-muted/30 aspect-[4/5] relative group/img cursor-pointer">
                <img
                  src={service.image}
                  alt={service.title}
                  class="w-full h-full object-cover transform group-hover/img:scale-105 transition-transform duration-1000 ease-out"
                />
                <div class="absolute inset-0 bg-foreground/0 group-hover/img:bg-foreground/5 transition-colors duration-500" />
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
