---
const services = [
  {
    id: "01",
    title: "Branding",
    items: [
      "Creative Direction",
      "Brand Identity",
      "Branding Strategy",
      "Graphic Design",
    ],
  },
  {
    id: "02",
    title: "Digital Marketing",
    items: [
      "Social Media Marketing",
      "Performance Marketing",
      "Search Engine Optimisation",
      "Strategy",
      "Market Research",
    ],
  },
  {
    id: "03",
    title: "Design",
    items: ["UX/UI Design", "Graphic Design"],
    image: "/images/service-design.png",
  },
  {
    id: "04",
    title: "Development",
    items: [
      "WordPress Website",
      "Custom Website",
      "Softwares",
      "E-Commerce",
      "Shopify",
    ],
  },
  {
    id: "05",
    title: "Production",
    items: [
      "Videography",
      "Photography",
      "Video Editing",
      "Product Photography",
    ],
  },
];
---

<section id="services" class="relative py-32 bg-[#f8f9fa] overflow-hidden">
  <!-- Subtle Grain Texture -->
  <div
    class="absolute inset-0 pointer-events-none opacity-[0.05] z-50 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
  >
  </div>

  <div class="max-w-[var(--max-width-container)] mx-auto px-6 relative z-10">
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-28 gap-8"
    >
      <div class="max-w-2xl">
        <span
          class="text-primary font-bold tracking-[0.2em] text-sm uppercase mb-4 block"
          >What we do</span
        >
        <h2
          class="text-6xl md:text-8xl font-black tracking-tight text-[#0c1b33] leading-[0.85]"
        >
          OUR <br /><span class="text-[#0c1b33]/10">SERVICES</span>
        </h2>
      </div>
      <div class="max-w-sm pb-2">
        <p
          class="text-lg font-medium text-[#0c1b33]/60 leading-relaxed italic border-l-2 border-primary pl-6"
        >
          We combine strategy with creativity to deliver exceptional digital
          experiences that drive growth and brand loyalty.
        </p>
      </div>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-16 gap-y-32"
    >
      {
        services.map((service) => (
          <div class="group flex flex-col relative">
            <div class="flex items-baseline justify-between mb-10 border-b border-[#0c1b33]/5 pb-8 relative">
              <h3 class="text-4xl font-extrabold text-[#0c1b33] tracking-tight transition-transform duration-500 group-hover:translate-x-2">
                {service.title}
              </h3>
              <span class="text-sm font-black text-[#0c1b33]/10 group-hover:text-primary transition-colors duration-500">
                ({service.id})
              </span>
              <div class="absolute bottom-0 left-0 h-[2px] w-0 bg-primary transition-all duration-700 ease-out group-hover:w-full" />
            </div>

            <ul class="space-y-5 mb-12 flex-grow">
              {service.items.map((item) => (
                <li class="text-xl font-medium text-[#0c1b33]/50 group-hover:text-[#0c1b33] transition-all duration-300 flex items-center gap-4">
                  <span class="w-1.5 h-1.5 rounded-full bg-[#0c1b33]/10 group-hover:bg-primary group-hover:scale-125 transition-all duration-300" />
                  {item}
                </li>
              ))}
            </ul>

            {service.image && (
              <div class="mt-4 overflow-hidden rounded-[2.5rem] bg-[#0c1b33]/5 aspect-[4/5] relative group/img cursor-pointer shadow-2xl shadow-black/5 transition-transform duration-500 hover:-translate-y-2">
                <img
                  src={service.image}
                  alt={service.title}
                  class="w-full h-full object-cover transform group-hover/img:scale-110 transition-transform duration-1000 ease-out"
                />
                <div class="absolute inset-0 bg-primary/0 group-hover/img:bg-primary/10 transition-colors duration-500" />
                <div class="absolute bottom-6 right-6 h-12 w-12 rounded-full bg-white flex items-center justify-center opacity-0 translate-y-4 group-hover/img:opacity-100 group-hover/img:translate-y-0 transition-all duration-500">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="3"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M5 12h14m-7-7 7 7-7 7" />
                  </svg>
                </div>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
