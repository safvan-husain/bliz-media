---
import BrandPhysics from "./BrandPhysics";
import InfiniteTestimonials from "./InfiniteTestimonials.astro";

interface Author {
    name: string;
    handle: string;
    avatar: string;
}

interface Testimonial {
    author: Author;
    text: string;
    href?: string;
}

interface Props {
    testimonials?: Testimonial[];
}

const { testimonials = [] } = Astro.props as Props;

const brands = [
    { name: "Google", id: "google", color: "bg-blue-500" },
    { name: "Meta", id: "meta", color: "bg-blue-600" },
    { name: "Amazon", id: "amazon", color: "bg-orange-500" },
    { name: "Microsoft", id: "microsoft", color: "bg-emerald-500" },
    { name: "Apple", id: "apple", color: "bg-zinc-900" },
    { name: "OpenAI", id: "openai", color: "bg-zinc-800" },
    { name: "Anthropic", id: "anthropic", color: "bg-amber-500" },
    { name: "Mistral", id: "mistral", color: "bg-fuchsia-500" },
    { name: "NVIDIA", id: "nvidia", color: "bg-lime-500" },
    { name: "Stripe", id: "stripe", color: "bg-indigo-500" },
    { name: "Vercel", id: "vercel", color: "bg-black" },
    { name: "Supabase", id: "supabase", color: "bg-green-500" },
];
---

<section id="brands" class="overflow-hidden bg-gray-50 py-24">
    <div class="mx-auto max-w-[var(--max-width-container)] px-4 mb-12 flex flex-col items-center text-center gap-4">
        <h2 class="text-3xl font-semibold leading-tight sm:text-5xl sm:leading-tight text-[var(--color-foreground)]">Trusted by Leading Brands</h2>
        <p class="text-md max-w-[600px] font-medium text-[var(--color-muted-foreground)] sm:text-xl">Our clients trust us to blend creativity and strategy to deliver real business impact.</p>
    </div>

    <div class="w-full mb-24">
        <InfiniteTestimonials testimonials={testimonials} />
    </div>

    <div
        class="mx-auto flex max-w-[var(--max-width-container)] px-4 flex-col gap-24"
    >
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
            <div>
                <h2
                    class="text-4xl font-bold tracking-tight text-[var(--color-foreground)] mb-6 md:text-5xl"
                >
                    Powering the Next Generation of <span
                        class="text-muted-foreground">Digital Innovation</span
                    >
                </h2>
                <p
                    class="text-xl text-muted-foreground leading-relaxed mb-8 max-w-xl"
                >
                    We collaborate with world-class technology leaders to build
                    scalable, high-performance solutions that redefine industry
                    standards.
                </p>
                <div class="flex flex-wrap gap-4">
                    <div
                        class="flex items-center gap-2 px-4 py-2 bg-muted rounded-full text-sm font-medium"
                    >
                        <div
                            class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
                        >
                        </div>
                        Active Partnerships
                    </div>
                </div>
            </div>

            <div class="h-[500px] w-full">
                <BrandPhysics client:load brands={brands} />
            </div>
        </div>
    </div>
</section>
