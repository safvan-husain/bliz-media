---
import BrandPhysics from "./BrandPhysics";
import { TestimonialsSection } from "./blocks/testimonials-with-marquee";

interface Author {
    name: string;
    handle: string;
    avatar: string;
}

interface Testimonial {
    author: Author;
    text: string;
    href?: string;
}

interface Props {
    testimonials?: Testimonial[];
}

const { testimonials = [] } = Astro.props as Props;

const brands = [
    { name: "Google", id: "google" },
    { name: "Meta", id: "meta" },
    { name: "Amazon", id: "amazon" },
    { name: "Microsoft", id: "microsoft" },
    { name: "Apple", id: "apple" },
    { name: "OpenAI", id: "openai" },
    { name: "Anthropic", id: "anthropic" },
    { name: "Mistral", id: "mistral" },
    { name: "NVIDIA", id: "nvidia" },
    { name: "Stripe", id: "stripe" },
    { name: "Vercel", id: "vercel" },
    { name: "Supabase", id: "supabase" },
];
---

<section class="overflow-hidden bg-white px-4 py-24">
    <div
        class="mx-auto flex max-w-[var(--max-width-container)] flex-col gap-24"
    >
        <TestimonialsSection
            client:visible
            title="Trusted by Leading Brands"
            description="Our clients trust us to blend creativity and strategy to deliver real business impact."
            testimonials={testimonials}
            className="bg-transparent px-0 py-0"
        />
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
            <div>
                <h2
                    class="text-4xl font-bold tracking-tight text-[var(--color-foreground)] mb-6 md:text-5xl"
                >
                    Powering the Next Generation of <span
                        class="text-muted-foreground">Digital Innovation</span
                    >
                </h2>
                <p
                    class="text-xl text-muted-foreground leading-relaxed mb-8 max-w-xl"
                >
                    We collaborate with world-class technology leaders to build
                    scalable, high-performance solutions that redefine industry
                    standards.
                </p>
                <div class="flex flex-wrap gap-4">
                    <div
                        class="flex items-center gap-2 px-4 py-2 bg-muted rounded-full text-sm font-medium"
                    >
                        <div
                            class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
                        >
                        </div>
                        Active Partnerships
                    </div>
                </div>
            </div>

            <div class="h-[500px] w-full">
                <BrandPhysics client:load brands={brands} />
            </div>
        </div>
    </div>
</section>
