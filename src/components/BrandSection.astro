---
import BrandPhysics from "./BrandPhysics";
import InfiniteTestimonials from "./InfiniteTestimonials.astro";
import { brands } from "../data/brands";

export interface Author {
    name: string;
    avatar: string;
}

export interface Testimonial {
    author: Author;
    text: string;
    href?: string;
}

interface Props {
    testimonials?: Testimonial[];
}

const { testimonials = [] } = Astro.props as Props;
---

<section id="brands" class="overflow-hidden bg-gray-50 py-24">
    <div
        class="mx-auto max-w-[var(--max-width-container)] px-4 mb-12 flex flex-col items-center text-center gap-4"
    >
        <h2
            class="text-3xl font-semibold leading-tight sm:text-5xl sm:leading-tight text-black"
        >
            What Our Clients Say
        </h2>
        <p
            class="text-md max-w-[600px] font-medium text-[var(--color-muted-foreground)] sm:text-xl"
        >
            Real feedback from clients who’ve partnered with us to build
            impactful digital solutions.
        </p>
    </div>

    <div class="w-full mb-24">
        <InfiniteTestimonials testimonials={testimonials} />
    </div>

    <div
        class="mx-auto flex max-w-[var(--max-width-container)] px-4 flex-col gap-24"
    >
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
            <div>
                <h2
                    class="flex flex-col text-4xl font-bold tracking-tight text-black mb-6 md:text-5xl mb-1"
                >
                    Trusted by Growing <span class="text-muted-foreground pt-2"
                        >Brands & Businesses</span
                    >
                </h2>
                <p
                    class="text-xl text-muted-foreground leading-relaxed mb-8 max-w-xl"
                >
                    We’ve partnered with startups, agencies, and businesses
                    across industries to design, build, and scale impactful
                    digital experiences.
                </p>
                <div class="flex flex-wrap gap-4">
                    <div
                        class="flex items-center gap-2 px-4 py-2 bg-muted rounded-full text-sm font-medium"
                    >
                        <div
                            class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
                        >
                        </div>
                        Active Partnerships
                    </div>
                </div>
            </div>

            <div class="h-[500px] w-full">
                <BrandPhysics client:load brands={brands} />
            </div>
        </div>
    </div>
</section>
