---
const showcaseServices = [
    {
        title: "Branding",
        slug: "branding",
        description:
            "Create a seamless experience. From brand essence to visual identity.",
        tags: ["Branding"],
        image: "/images/service-card-imags/branding.png",
        color: "bg-branding",
    },
    {
        title: "Web Development",
        slug: "web-development",
        description:
            "Create a seamless experience. From first click to final scroll.",
        tags: ["Web Development"],
        image: "/images/service-card-imags/development.png",
        color: "bg-website",
    },
    {
        title: "Design",
        slug: "design",
        description:
            "Create a seamless experience. From first glance to final page.",
        tags: ["Design"],
        image: "/images/service-card-imags/design.png",
        color: "bg-profile",
    },
    {
        title: "Production",
        slug: "production",
        description:
            "We create stunning visual content that captures your brand's story with clarity and style.",
        tags: ["Production"],
        image: "/images/service-card-imags/production.png",
        color: "bg-video",
    },
    {
        title: "Digital Marketing",
        slug: "digital-marketing",
        description:
            "We create stunning visual content that captures your brand's story with clarity and style.",
        tags: ["Digital Marketing"],
        image: "/images/service-card-imags/digital-marketing.png",
        color: "bg-video",
    },
];
---

<section class="pb-12 px-6">
    <div class="max-w-[var(--max-width-container)] mx-auto flex flex-col gap-6">
        {
            showcaseServices.map((service) => (
                <div class="group relative h-[450px] md:h-[600px] rounded-[3rem] overflow-hidden transition-all duration-1000">
                    {/* Background Image */}
                    <div class="absolute inset-0">
                        <img
                            src={service.image}
                            alt={service.title}
                            class="w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-110"
                        />
                    </div>

                    {/* Premium Color Overlay */}
                    <div
                        class={`absolute inset-0 ${service.color} opacity-80 mix-blend-multiply transition-all duration-700 group-hover:opacity-90`}
                    />

                    {/* Subtle Gradient for readability */}
                    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/20 to-black/60 opacity-60" />

                    {/* Content */}
                    <div class="absolute inset-0 flex flex-col items-center justify-center p-8 text-center text-white z-10">
                        <h3 class="text-4xl md:text-7xl font-black tracking-tighter mb-4 transform transition-all duration-700 group-hover:scale-105 group-hover:-translate-y-2">
                            {service.title}
                        </h3>
                        <p class="max-w-xl text-lg md:text-2xl font-medium text-white/90 mb-10 leading-tight transform transition-all duration-700 delay-75 group-hover:-translate-y-2">
                            {service.description}
                        </p>

                        <div class="flex flex-wrap justify-center gap-4 mb-12 transform transition-all duration-700 delay-100 group-hover:-translate-y-2">
                            {service.tags.map((tag) => (
                                <span class="px-8 py-2.5 rounded-full border border-white/30 bg-white/10 backdrop-blur-md text-xs font-black uppercase tracking-[0.2em] transition-all duration-500 hover:bg-white hover:text-black">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <a
                            href={`/services/${service.slug}`}
                            class="bg-[#0c1b33] text-white px-10 py-5 rounded-full font-black tracking-[0.2em] text-xs flex items-center gap-4 border border-white/10 transition-all duration-500 hover:bg-primary hover:scale-110 hover:shadow-[0_0_30px_rgba(255,61,61,0.4)] active:scale-95 group-hover:-translate-y-2"
                        >
                            VIEW MORE
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="transition-transform duration-500 group-hover:translate-x-1"
                            >
                                <line x1="5" y1="12" x2="19" y2="12" />
                                <polyline points="12 5 19 12 12 19" />
                            </svg>
                        </a>
                    </div>

                    {/* Inner Border Flare on Hover */}
                    <div class="absolute inset-0 border-[1px] border-white/0 group-hover:border-white/20 transition-all duration-1000 rounded-[3rem] pointer-events-none scale-95 group-hover:scale-100" />
                </div>
            ))
        }
    </div>
</section>
