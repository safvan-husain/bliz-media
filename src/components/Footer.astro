<style>
  .footer-container {
    background-color: rgb(17, 17, 17);
    color: #a1a1aa;
    padding: 80px 24px 40px;
    position: relative;
    overflow: hidden;
    font-family: "Inter", sans-serif;
  }

  .footer-content {
    max-width: 1280px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 64px;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  .logo-wrapper {
    margin-bottom: 24px;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-logo {
    height: 48px;
    width: auto;
  }

  .brand-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    max-width: 380px;
    margin-bottom: 32px;
  }

  .footer-title {
    color: #ffffff;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 24px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    text-align: center;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hover-link {
    font-size: 0.875rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
  }

  .hover-link:hover {
    color: #ffffff;
    transform: translateX(4px);
  }

  .static-list li {
    font-size: 0.875rem;
    color: #d4d4d8;
  }

  .social-icons-container {
    display: flex;
    gap: 16px;
    margin-top: 24px;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .social-icons-container {
      justify-content: flex-start;
    }
  }

  .social-icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.05);
    color: #a1a1aa;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-icon-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    transform: translateY(-2px);
  }

  .social-icons-row {
    display: flex;
    gap: 20px;
    margin-top: 24px;
  }

  .social-link {
    font-size: 0.875rem;
    color: #ffffff;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 2px;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 32px;
    margin-top: 64px;
  }

  .bottom-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .bottom-container {
      flex-direction: row;
    }

    .footer-brand {
      align-items: flex-start;
      text-align: left;
    }

    .footer-links {
      align-items: flex-start;
      text-align: left;
    }
  }

  .copyright {
    font-size: 0.75rem;
    color: #71717a;
  }

  .bottom-links {
    display: flex;
    gap: 24px;
  }

  .bottom-link {
    font-size: 0.75rem;
    color: #71717a;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .bottom-link:hover {
    color: #ffffff;
  }

  .bg-decoration {
    position: absolute;
    bottom: -40px;
    right: -20px;
    font-size: 15rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.03);
    pointer-events: none;
    line-height: 1;
    z-index: 1;
    user-select: none;
  }

  .hidden {
    display: none;
  }

  @media (min-width: 768px) {
    .md\:block {
      display: block;
    }
    .md\:hidden {
      display: none;
    }
  }
</style>
