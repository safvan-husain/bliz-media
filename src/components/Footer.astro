---
const currentYear = new Date().getFullYear();
---

<footer class="footer-container">
  <div class="footer-content">
    <div class="footer-grid">
      <!-- Brand & About -->
      <div class="footer-brand">
        <div class="logo-wrapper">
          <img
            src="/Bliz Media Logo.webp"
            alt="Bliz Media Logo"
            class="footer-logo"
          />
        </div>
        <p class="brand-description">
          Bliz Media is a creative digital agency blending branding, marketing,
          and development to help businesses stand out and succeed online.
        </p>
        <div class="social-icons-row md:hidden">
          <a href="#" class="social-link">Facebook</a>
          <a href="#" class="social-link">Instagram</a>
          <a href="#" class="social-link">LinkedIn</a>
        </div>
      </div>

      <!-- Services -->
      <div class="footer-links">
        <h3 class="footer-title">Services</h3>
        <ul class="link-list">
          <li><a href="#" class="hover-link">Branding</a></li>
          <li><a href="#" class="hover-link">Digital Marketing</a></li>
          <li><a href="#" class="hover-link">Design</a></li>
          <li><a href="#" class="hover-link">Development</a></li>
          <li><a href="#" class="hover-link">Production</a></li>
        </ul>
      </div>

      <!-- Locations -->
      <div class="footer-links">
        <h3 class="footer-title">Locations We Serve</h3>
        <ul class="link-list static-list">
          <li>Dubai</li>
          <li>Sharjah</li>
          <li>Abu Dhabi</li>
          <li>Calicut</li>
          <li>Bengaluru</li>
        </ul>
      </div>

      <!-- Socials (Desktop) -->
      <div class="footer-links hidden md:block">
        <h3 class="footer-title">Socials</h3>
        <ul class="link-list">
          <li><a href="#" class="hover-link">Facebook</a></li>
          <li><a href="#" class="hover-link">Instagram</a></li>
          <li><a href="#" class="hover-link">LinkedIn</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="bottom-container">
        <p class="copyright">
          &copy; {currentYear} Bliz Media LLC. All right reserved
        </p>
        <div class="bottom-links">
          <a href="#" class="bottom-link">Privacy Policy</a>
          <a href="#" class="bottom-link">Terms & Conditions</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Element -->
  <div class="bg-decoration">BLIZ</div>
</footer>

<style>
  .footer-container {
    background-color: rgb(17, 17, 17);
    color: #a1a1aa;
    padding: 80px 24px 40px;
    position: relative;
    overflow: hidden;
    font-family: "Inter", sans-serif;
  }

  .footer-content {
    max-width: 1280px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 64px;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  .logo-wrapper {
    margin-bottom: 24px;
  }

  .footer-logo {
    height: 48px;
    width: auto;
    filter: invert(1) brightness(100%);
  }

  .brand-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    max-width: 380px;
    margin-bottom: 32px;
  }

  .footer-title {
    color: #ffffff;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 24px;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hover-link {
    font-size: 0.875rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
  }

  .hover-link:hover {
    color: #ffffff;
    transform: translateX(4px);
  }

  .static-list li {
    font-size: 0.875rem;
    color: #d4d4d8;
  }

  .social-icons-row {
    display: flex;
    gap: 20px;
    margin-top: 24px;
  }

  .social-link {
    font-size: 0.875rem;
    color: #ffffff;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 2px;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 32px;
    margin-top: 64px;
  }

  .bottom-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .bottom-container {
      flex-direction: row;
    }
  }

  .copyright {
    font-size: 0.75rem;
    color: #71717a;
  }

  .bottom-links {
    display: flex;
    gap: 24px;
  }

  .bottom-link {
    font-size: 0.75rem;
    color: #71717a;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .bottom-link:hover {
    color: #ffffff;
  }

  .bg-decoration {
    position: absolute;
    bottom: -40px;
    right: -20px;
    font-size: 15rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.03);
    pointer-events: none;
    line-height: 1;
    z-index: 1;
    user-select: none;
  }

  .hidden {
    display: none;
  }

  @media (min-width: 768px) {
    .md\:block {
      display: block;
    }
    .md\:hidden {
      display: none;
    }
  }
</style>
