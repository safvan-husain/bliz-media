---
/**
 * Data for floating social buttons.
 * Icons are manually optimized SVG paths to match the project's premium aesthetic.
 */
const socials = [
    {
        name: "Instagram",
        href: "https://instagram.com/blizmedia",
        // Using Tailwind 4 @theme variables
        containerClass: "bg-instagram shadow-instagram/30",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>`,
    },
    {
        name: "WhatsApp",
        href: "https://wa.me/971501234567",
        containerClass: "bg-accent shadow-accent/30",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-11.23 8.38 8.38 0 0 1 3.8.9L21 3z"></path></svg>`,
    },
];
---

<div
    class="fixed bottom-6 right-6 flex flex-col gap-4 z-[9999] sm:bottom-8 sm:right-8"
>
    {
        socials.map((social) => (
            <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class={`
        group relative w-12 h-12 sm:w-14 sm:h-14 
        flex items-center justify-center 
        rounded-[1.25rem] transition-all duration-500
        hover:-translate-y-2 active:scale-95
        text-white shadow-2xl
        ${social.containerClass}
      `}
                aria-label={`Contact us on ${social.name}`}
            >
                {/* Background Glow */}
                <div class="absolute inset-0 rounded-[1.25rem] bg-white/20 scale-0 group-hover:scale-125 transition-transform duration-500 blur-xl opacity-0 group-hover:opacity-40" />

                {/* Icon */}
                <div class="relative z-10 transform group-hover:scale-110 transition-transform duration-500">
                    <Fragment set:html={social.icon} />
                </div>

                {/* Label Tooltip */}
                <div class="absolute right-full mr-4 px-4 py-2 rounded-xl bg-gray-900/90 text-white text-sm font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none translate-x-4 group-hover:translate-x-0 whitespace-nowrap border border-white/10 backdrop-blur-xl shadow-2xl">
                    {social.name}
                    {/* Tooltip Arrow */}
                    <div class="absolute top-1/2 -right-1 -translate-y-1/2 w-2 h-2 bg-gray-900 border-r border-t border-white/10 rotate-45" />
                </div>

                {/* Floating Pulse (Only for WhatsApp) */}
                {social.name === "WhatsApp" && (
                    <span class="absolute inset-0 rounded-[1.25rem] bg-accent/40 animate-ping -z-10 group-hover:hidden" />
                )}
            </a>
        ))
    }
</div>

<style>
    /* Premium backdrop filter for the buttons */
    a {
        backdrop-filter: saturate(180%) blur(10px);
        -webkit-backdrop-filter: saturate(180%) blur(10px);
    }
</style>
