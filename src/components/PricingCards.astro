---
import type { Plan } from "../data/services";
import PricingCard from "./PricingCard.astro";
import PremiumPricingCard from "./PremiumPricingCard.astro";

interface Props {
  plans: Plan[];
  serviceName: string;
}

const { plans, serviceName } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-[var(--max-width-container)] mx-auto px-6">
    <div
      class="text-center mb-16 translate-y-8 opacity-0 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0"
      data-animate-on-scroll
    >
      <h2
        class="text-4xl md:text-5xl font-black tracking-tighter text-[#0c1b33] mb-4"
      >
        Choose Your Plan
      </h2>
      <p class="text-xl text-[#0c1b33]/60 max-w-2xl mx-auto">
        Select the perfect plan that fits your needs and budget
      </p>
    </div>

    <div class="flex flex-col md:flex-row gap-8 max-w-6xl mx-auto items-end">
      {plans.map((plan, index) => (
        <div
          class={`group opacity-0 transition-all duration-700 ease-out [&.animate-in]:opacity-100 [&.animate-in]:translate-y-0 hover:-translate-y-2 hover:scale-[1.02] flex flex-col lg:h-full flex-1 min-w-0 md:flex-[0_1_calc(50%-1rem)] lg:flex-[0_1_calc(33.333%-1.33rem)]`}
          data-animate-on-scroll
          style={`transition-delay: ${index * 200}ms;`}
        >
          {plan.premium ? (
            /* Premium Wrapper Container */
            <div class="relative bg-gradient-to-br from-primary to-primary/80 rounded-3xl p-1 shadow-2xl shadow-primary/20 transform flex flex-col lg:h-full">
              {/* Popular Label */}
              <div class="text-center py-2 flex-shrink-0">
                <span class="text-white font-black tracking-[0.2em] text-xs uppercase">
                  Most Popular
                </span>
              </div>
              
            <PricingCard plan={plan} serviceName={serviceName} />
            </div>
          ) : (
            /* Regular Card Component */
            <PricingCard plan={plan} serviceName={serviceName} />
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.classList.add("animate-in");
            }, index * 100);
          }
        });
      },
      { threshold: 0.1 },
    );

    document
      .querySelectorAll("[data-animate-on-scroll]")
      .forEach((el) => observer.observe(el));
  });
</script>
