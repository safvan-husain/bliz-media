<section id="contact" class="py-16 bg-white">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-8">Contact Us</h2>
    <p class="text-lg text-gray-700 mb-8">Ready to start your project? Get in touch with us today!</p>
    <form class="max-w-xl mx-auto space-y-4">
      <input type="text" placeholder="Your Name" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      <input type="email" placeholder="Your Email" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      <textarea placeholder="Your Message" rows="5" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full">Send Message</button>
    </form>
  </div>
</section>
