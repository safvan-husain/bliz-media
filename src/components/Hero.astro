<script>
  const locations = [
    "DUBAI",
    "SHARJAH",
    "ABU DHABI",
    "BAHRAIN",
    "QATAR",
    "SAUDI ARABIA",
    "KUWAIT",
    "OMAN",
    "INDIA",
  ];

  let currentIndex = 0;
  const locationElement = document.getElementById("dynamic-location");

  if (locationElement) {
    setInterval(() => {
      locationElement.style.opacity = "0";
      locationElement.style.transform = "translateY(10px)";

      setTimeout(() => {
        currentIndex = (currentIndex + 1) % locations.length;
        locationElement.textContent = locations[currentIndex];
        locationElement.style.opacity = "1";
        locationElement.style.transform = "translateY(0)";
      }, 300);
    }, 1200); // 1.2s to give enough room for the 0.3s animation + 0.9s pause
  }
</script>
